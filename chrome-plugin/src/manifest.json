{
  "manifest_version": 2,

  "name": "Mule plugin",
  "description": "Mule when told to intercept captures outbound request",
  "version": "1.0",

  "browser_action": {
    "default_icon": "assets/snowflake_512.png",
    "default_popup": "index.html",
    "default_title": "Angular Plugin!"
  },
  "background": {
    "scripts": [ "background.bundle.js" ],
    "persistent": true
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "activeTab",
    "webRequest",
    "webNavigation",
    "<all_urls>"
  ]
}
